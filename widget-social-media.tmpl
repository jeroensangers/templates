<section class="socialmedia">
  <div class="sharebutton twitter">
    <a href="https://twitter.com/share" class="twitter-share-button" data-count="vertical" data-via="ElCanasto" data-lang="es">Tweet</a>
  </div>

  <div class="sharebutton facebook">
    <fb:like <mt:If name="main_index"><mt:Unless tag="BlogID" eq="15">href="https://www.facebook.com/blog.canasto" </mt:Unless></mt:If>send="false" layout="box_count" show_faces="false"></fb:like>
  </div>

  <div class="sharebutton plusone">
    <g:plusone size="tall"></g:plusone>
  </div>

  <div class="sharebutton linkedin">
    <script type="IN/Share" data-counter="top" data-onsuccess="LinkedInShare"></script>
  </div>
</section>